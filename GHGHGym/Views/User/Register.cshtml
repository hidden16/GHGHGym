@using GHGHGym.Infrastructure.Data.Models.Enums
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.FirstName">First Name</label>
                <input class="form-control" placeholder="Example: Ivan" autocomplete="username" aria-required="true" asp-for="@Model.FirstName" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.LastName">Last Name</label>
                <input class="form-control" placeholder="Example: Ivanov" autocomplete="username" aria-required="true" asp-for="@Model.LastName" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <div class="md-form">
                    <label asp-for="@Model.BirthDate">Date of Birth</label>
                    <input asp-for="@Model.BirthDate" type="date" class="form-control datepicker" value=""
                           min="1940-01-01" max="@DateTime.UtcNow.Year-@DateTime.UtcNow.Month-@DateTime.UtcNow.Day">
                    <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.GenderType">Gender</label>
                <i class="fa-solid fa-caret-down" data-fa-transform="down-32 right-163"></i>
                <select asp-for="@Model.GenderType" class="form-control">
                    @foreach (var gender in (GenderType[])@Enum.GetValues(typeof(GenderType)))
                    {
                        <option value="@gender">@gender</option>
                    }
                </select>
                <span asp-validation-for="@Model.GenderType" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email">Email</label>
                <input class="form-control" placeholder="Example: test@gmail.com" autocomplete="username" aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password">Password</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/js/all.min.js"></script>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}