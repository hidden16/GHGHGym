@using GHGHGym.Core.Models.TrainingPrograms
@model CreateTrainingProgramViewModel
@{
    ViewBag.Title = "Create a Training Program";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Create" asp-controller="TrainingProgram" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ProgramDescription" type="text" class="form-label">Description</label>
               <textarea asp-for="@Model.ProgramDescription" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.ProgramDescription" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="mb-3">
                    <label asp-for="@Model.Files" enctype="multipart/form-data" class="form-label">Choose images ( .jpg )</label>
                    <input asp-for="@Model.Files" class="form-control" type="file" multiple>
                    <span asp-validation-for="@Model.Files" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="@Model.TrainerId" value="@Model.TrainerId" />
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Create Program" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}