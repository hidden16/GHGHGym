@model IEnumerable<TrainerViewModel>
@{
    ViewBag.Title = "All Trainers";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
<link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<partial name="_UserMessages" />
<div class="text-center row">
    @foreach (var trainer in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@trainer.ImageUrls.FirstOrDefault()" alt="Product Image">
            <div class="card-body">
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-controller="Trainer" asp-action="Edit" asp-route-id="@trainer.Id">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <a asp-controller="Trainer" asp-action="Delete" asp-route-id="@trainer.Id">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                }
                <h5 class="card-title mt-1">@trainer.Name</h5>
                <a asp-controller="Trainer" asp-action="TrainerById" asp-route-productId="@trainer.Id" >
                    <input type="submit" value="Details" class="fs-6 btn btn-success mb-3 p-2" />
                </a>
            </div>
        </div>
    }
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/js/all.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>

