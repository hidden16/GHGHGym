@model EditCommentViewModel
@{
    ViewBag.Title = "Edit Comment";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="EditProductComment" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Text" class="form-label">Text</label>
                <input asp-for="@Model.Text" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Text" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="@Model.PostId" value="@Model.PostId" />
            <input type="hidden" asp-for="@Model.CommentId" value="@Model.CommentId" />
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Edit" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}