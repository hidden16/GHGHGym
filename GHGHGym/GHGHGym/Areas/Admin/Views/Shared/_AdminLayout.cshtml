@using GHGHGym.Infrastructure.Data.Models.Account
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GHGHGym</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GHGHGym.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src=~/Images/gh2.png height="90" width="90" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <div class="btn-group">
                        <ul class="navbar-nav flex-grow-1">
                            <li>
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <b>
                                        All
                                    </b>
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="All">All Users</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="All">All Products</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Trainer" asp-action="All">All Trainers</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="All">All Categories</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="btn-group">
                        <ul class="navbar-nav flex-grow-1">
                            <li>
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <b>
                                        Add
                                    </b>
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Add">Add Product</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Add">Add Category</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <a class="navbar-nav" asp-area="" asp-controller="Home" asp-action="Index">Leave Administration Area</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/js/all.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
